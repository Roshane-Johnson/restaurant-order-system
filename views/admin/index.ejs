<div class="w-full h-[300px] bg-blue-500 p-10">
	<h2 class="uppercase font-bold text-white">Orders</h2>
</div>
<div class="grid grid-cols-2 gap-8 p-10 max-h-full h-full w-full absolute top-[150px]">
	<div class="card rounded-md p-6 bg-white shadow-md relative h-[350px]">
		<div class="card__info--yellow flex justify-start flex-col rounded-md p-4 bg-blue-700 shadow-md w-11/12 h-[80px] absolute -top-12 left-1/2 -translate-x-1/2">
			<h3 class="card__info-title-sm mb-1 text-xs font-semibold text-white uppercase">Overview</h3>
			<h2 class="card__info-title text-lg font-semibold text-white">New Orders</h2>
		</div>
		<div class="card-content">
			<ul class="grid gap-y-3 mt-6">
				<% orders.forEach(order => {%>
				<li class="flex justify-between bg-gray-200 rounded px-4 py-2 w-full h-[40px]">
					<a href="#!"><%= order.uuid %></a>
					<button type="button" class="py-auto px-3 rounded bg-slate-500 text-slate-200">&check;</button>
				</li>
				<%}) %>
			</ul>
			<div class="flex justify-center items-center">
				<button type="button" class="px-3 py-2 text-xs font-bold mt-3 rounded">All Orders<span>&gt;</span></button>
			</div>
		</div>
	</div>
	<div class="card rounded-md p-6 bg-white shadow-md relative h-[350px]">
		<div class="card__info--yellow flex justify-start flex-col rounded-md p-4 bg-green-600 shadow-md w-11/12 h-[80px] absolute -top-12 left-1/2 -translate-x-1/2">
			<h3 class="card__info-title-sm mb-1 text-xs font-semibold text-white uppercase">Overview</h3>
			<h2 class="card__info-title text-lg font-semibold text-white">Confirmed Orders</h2>
		</div>
		<div class="card-content">
			<ul class="grid gap-y-3 mt-6">
				<li class="bg-gray-200 rounded px-4 py-2 w-full h-[40px]"><a href="#!">Sale 11</a></li>
				<li class="bg-gray-200 rounded px-4 py-2 w-full h-[40px]"><a href="#!">Sale 18</a></li>
				<li class="bg-gray-200 rounded px-4 py-2 w-full h-[40px]"><a href="#!">Sale 24</a></li>
				<li class="bg-gray-200 rounded px-4 py-2 w-full h-[40px]"><a href="#!">Sale 42</a></li>
				<li class="bg-gray-200 rounded px-4 py-2 w-full h-[40px]"><a href="#!">Sale 65</a></li>
			</ul>
			<div class="flex justify-center items-center">
				<button type="button" class="px-3 py-2 text-xs font-bold mt-3 rounded">Confirmed Sales <span>&gt;</span></button>
			</div>
		</div>
	</div>
</div>
